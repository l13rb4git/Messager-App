<% rooms.each do |room| %>
  <%= link_to room, class: "room-link" do %>
    <div class="card no-outline mb-2 room-card <%= room_active @room, room %>">
      <div class="card-body">
        <span class="name"> <%= room.name %> </span>
        <br>
        <span class="member-count"> <small><%= room.users.uniq.count %> Members</small> </span>
      </div>
    </div>
  <% end %>
<% end %>
